@model DocSystem.Models.SickLeave

@{
    ViewData["Title"] = "SickLeave";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Partial("PatientName", ViewData["PatientName"])
@using (Html.BeginForm("SubmitAction", "Patient", FormMethod.Post))
{
    <div>
        <h4>SickLeave</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.DoctorName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DoctorName)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Days)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Days)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Date)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Date)
            </dd>
        </dl>
    </div>
<div>
    <input id="url" type="hidden" style="width: 90%;" value="" name="TxtUrl" />
    <script>
        var test = "https://localhost:44358/Patient/SickLeave/" + @ViewBag.id + "?patientId=" + @ViewBag.patientId;
        document.getElementById("url").value = test;
    </script>
    <input type="submit" name="BtnConvert" value="Create PDF" class="btn-default" />
</div>
}