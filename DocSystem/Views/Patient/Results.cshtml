@model IEnumerable<DocSystem.Models.Result>

@{
    ViewData["Title"] = "Results";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Results</h2>
@using (Html.BeginForm("SubmitAction", "Patient", FormMethod.Post))
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Unit)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Value)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Unit)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Value)
                    </td>
                    <td>
                        @Html.ActionLink("Chart", "ChartView", new { name = item.Name })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <input id="url" type="hidden" style="width: 90%;" value="" name="TxtUrl"  />
    <script>
        var test = "https://localhost:44358/Patient/PdfResults/" + @ViewBag.var;
        document.getElementById("url").value = test;
    </script>
    <button class="btn btn-primary mb-2" type="submit" name="BtnConvert">Create PDF</button>

}
