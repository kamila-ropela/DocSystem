@model DocSystem.Models.MedicalDescription

@{
    ViewData["Title"] = "Description";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("VisitInfo", ViewData["visit"])
@Html.Partial("PatientInfo", ViewData["patient"])

<form asp-action="AddDescription">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Type" class="control-label"></label></br>
        <input type="radio" asp-for="Type" value="visit">Visit </></br>
        <input type="radio" asp-for="Type" value="examination">Examination</>

    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />

    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-default">
    </div>
</form>