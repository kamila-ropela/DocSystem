@model DocSystem.Models.SickLeave

@{
    ViewData["Title"] = "DoctorSickLeave";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("PatientInfo", ViewData["patient"])

<h2> Add sick leave</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="DoctorSickLeave">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group">
                <label asp-for="Days" class="control-label"></label>
                <input asp-for="Days" class="form-control" />
                <span asp-validation-for="Days" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>



