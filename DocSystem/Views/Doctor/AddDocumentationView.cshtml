@model DocSystem.Models.Documentation

@{
    ViewData["Title"] = "Add documentation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("PatientInfo", ViewData["patient"])
<h2>Documentation</h2>


<form asp-action="AddDocumentationView">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Disease" class="control-label"></label>
        <input asp-for="Disease" class="form-control" />
        <span asp-validation-for="Disease" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Add" class="btn btn-default" />
    </div>
</form>
